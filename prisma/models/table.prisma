model Tables {
  id           String      @id @default(cuid())
  table_number String      @unique
  capacity     Int
  status       TableStatus @default(AVAILABLE)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  orders       Orders[]

  location     TableLocations @relation(fields: [location_id],references: [id])
  location_id String
}

enum TableStatus {
  AVAILABLE
  READY_TO_ORDER
  OCCUPIED
  RESERVED
  CLOSED
}
